@model UserLoginView
@{
    ViewBag.Title = "Login";
}
<head>
    <style>
        body {
            background-color: #68437d
        }
    </style>
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />

</head>
<body>
    <div class="limiter">
        <div class="container-login">
            <div class="wrap-login">
                <div class="login-form-title">Welcome</div>
                @using (Html.BeginForm("LoginUser", "UserAccount", FormMethod.Post))
                {
                    <div class="wrap-input">
                        <div> @Html.TextBoxFor(a => a.Email, new { placeholder = "Username", @class = "input-container", required = "required" })</div>
                    </div>

                    <div class="wrap-input">
                        @Html.PasswordFor(a => a.Password, new { placeholder = "Password", @class = "input-container", rquired = "required" })
                    </div>
                    <div>
                        <div class="container-login-form-btn">

                            <button class="login-form-btn">
                                Login
                            </button>

                        </div>
                    </div>

                }
                <div class="login-form-title"> @Html.ActionLink("Don't have an account?Create one", "SignUp", "UserAccount")</div>
            </div>
        </div>
</body>